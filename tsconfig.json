{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "lib": ["es6", "es2015", "dom"],
    "declaration": true,
    "strict": true
  }
}
